<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/state_no_select"
        android:drawable="@drawable/no_seletc_anim"
        android:state_checked="false" />
    
    <item
        android:id="@+id/state_selected"
        android:drawable="@drawable/select_anim"
        android:state_checked="true" />

    <transition
        android:fromId="@id/state_no_select"
        android:toId="@id/state_selected"
        android:drawable="@drawable/book_transition" />
</animated-selector>